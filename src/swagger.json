{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "CMDB Mainframe for NRB",
      "description": "this application allows the management of CMDB Mainframe internally via a REST API service"
    
    },
    
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "in": "authorization-header",
         "authenticationScheme": "Bearer"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
      {
        "name": "Users",
        "description": "connection management, for users"
      },
      {
        "name": "Platforms",
        "description": "platform management (world) in system"
      }
    ],
    "schemes": [
      "http","https"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/users/signin": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "signin to application",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to signin",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "user is connected",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "/platforms": {
        "post": {
          "tags": [
            "Platforms"
          ],
          "description": "Create new platform in system",
          "parameters": [
            {
              "name": "platform",
              "in": "body",
              "description": "create a platform",
              "schema": {
                "$ref": "#/definitions/Platform"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New platform is created"
            },
            "403": {
                "description": "you are authorized to create a platform, please contact the administrator"
              }
          }
        },
        "get": {
          "tags": [
            "Platforms"
          ],
          "summary": "Get all Platforms in system",
          "responses": {
            "200": {
              "description": "OK"
            },
            "403":{
                "description": "you are authorized to create a platform, please contact the administrator"

            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "properties": {
          "username": {
            "type": "string",
            "uniqueItems": true
          },
          "password": {
            "type": "string",
            "uniqueItems": true
          }
        }
      },
      "Platform": {
        "properties": {
          "name": {
            "type": "string",
            "uniqueItems": true
          }
        }
      }
    }
  }