{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Yet Another Node.js Blogg Application API",
      "description": "Yet Another Node.js Blogg Application API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      },
      {
        "name": "Platforms",
        "description": "API for users in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/users/signin": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "signin to application",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to signin",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user is created",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "/platforms": {
        "post": {
          "tags": [
            "Platforms"
          ],
          "description": "Create new platform in system",
          "parameters": [
            {
              "name": "platform",
              "in": "body",
              "description": "User that we want to create platform",
              "schema": {
                "$ref": "#/definitions/Platform"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user is created"
            },
            "403": {
                "description": "not possible for you"
              }
          }
        },
        "get": {
          "tags": [
            "Platforms"
          ],
          "summary": "Get all Platforms in system",
          "responses": {
            "200": {
              "description": "OK"
            },
            "403":{
                "description": "not possible"

            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "properties": {
          "username": {
            "type": "string",
            "uniqueItems": true
          },
          "password": {
            "type": "string",
            "uniqueItems": true
          }
        }
      },
      "Platform": {
        "properties": {
          "name": {
            "type": "string",
            "uniqueItems": true
          }
        }
      }
    }
  }